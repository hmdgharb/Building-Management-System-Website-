      <div class="row" style="margin: 0px 150px 10px;">

                        <div class="span4 well" style="width: 550px;">
                              <h3 class="text-right">مدیریت پیغام:</h3>
				<p>_______________________</p>
 				<p>جدول ایمیل ساکنین و مدیریت ساختمان</p>
	</br>
	</br>
        <table class="table table-striped table-bordered table-condensed  table-responsive pull-right text-center">
                <thead>
                   <tr>
                        <th>شماره</th>
                        <th>نام </th>
                        <th>نام خانوادگی</th>
                        <th>شماره تلفن</th>
                        <th>ایمیل</th>
                   </tr>
                </thead>
                <tbody>
                <% @counter = 0%>
                  <% @usrs.each do |myusr| %>
                    <% @counter = @counter + 1 %>
                   <tr class="success">
                        <td><%= @counter %></td>
                        <td><%= myusr.firstN %></td>
                        <td><%= myusr.sureN %></td>
                        <td><%= myusr.telNum %></td>
                        <% @hello ="" +  myusr.email %>
                        <td> <%= link_to( @hello, :action => 'usrSendNewMsg', :controller => 'msg', :recipient_email => @hello) %> </td>
                   </tr>
                  <% end %>
                </tbody>

          </table>

                        </div>



                        <div class="accordion span4 " style="margin: 0px 0px 0px 46px;" id="leftMenu">


                               <div class="accordion-heading">

                                                              <li> <img src="/assets/home.png" ><%= link_to("صفحه اصلی ساکن", :controller => 'usr', :action => 'household') %></li>

                                </div>
                                <div class="accordion-heading">

                                                              <li> <img src="/assets/message.png" ><%= link_to(" مدیریت پیغامها ", :controller => 'msg', :action => 'usrMessageManagement') %></li>

                                </div>
